{
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "crlf",
  "singleQuote": false,
  "trailingComma": "all",
  "useTabs": true,
  "semi": false,

  "svelteSortOrder": "options-scripts-markup-styles",
  "svelteAllowShorthand": true,
  "svelteIndentScriptAndStyle": false,

  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"]
}
